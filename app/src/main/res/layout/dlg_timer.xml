<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ddff0000"
    android:alpha="128"
    android:theme="@android:style/Theme.Translucent.NoTitleBar"
    android:touchscreenBlocksFocus="false">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="30dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_unlimit"
            android:src="@drawable/selector_dlg_button_unlimit"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_10min"
            android:src="@drawable/selector_dlg_button_10min"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_20min"
            android:src="@drawable/selector_dlg_button_20min"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="30dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_30min"
            android:src="@drawable/selector_dlg_button_30min"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_60min"
            android:src="@drawable/selector_dlg_button_60min"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dlg_button_120min"
            android:src="@drawable/selector_dlg_button_120min"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
