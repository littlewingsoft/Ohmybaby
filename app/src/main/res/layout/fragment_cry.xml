                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_01"
                    android:tintMode="multiply"
                    android:src="@drawable/animal_icon_01_normal" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:src="@drawable/animal_icon_02_normal"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_02"
                    android:backgroundTintMode="multiply" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:src="@drawable/animal_icon_03_normal"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_03"
                    android:backgroundTintMode="multiply" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton4"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_04"
                    android:src="@drawable/animal_icon_04_normal" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton5"
                    android:layout_weight="1"
                    android:src="@drawable/animal_icon_05_normal"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_05" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton6"
                    android:layout_weight="1"
                    android:src="@drawable/animal_icon_06_normal"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_06" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

