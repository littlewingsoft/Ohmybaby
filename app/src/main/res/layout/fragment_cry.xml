                    android:id="@+id/imageButton22"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_07"
                    android:src="@drawable/effect_sleep_image_icon_09" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton23"
                    android:layout_weight="1"
                    android:src="@drawable/effect_sleep_image_icon_10"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_08" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton24"
                    android:layout_weight="1"
                    android:src="@drawable/effect_sleep_image_icon_11"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_09" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton25"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_06"
                    android:src="@drawable/effect_sleep_image_icon_12" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton26"
                    android:layout_weight="1"
                    android:src="@drawable/effect_sleep_image_icon_13"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_07" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton27"
                    android:layout_weight="1"
                    android:src="@drawable/effect_sleep_image_icon_14"
                    android:scaleType="fitCenter"
                    android:background="@drawable/effect_sleep_button_03" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#ff90b5ff"
        android:weightSum="10" >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_stopall"
            android:src="@drawable/icon_stop_normal"
            android:layout_weight="7"
            android:background="@null"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_timer"
            android:src="@drawable/icon_time_infinity_normal"
            android:layout_weight="3"
            android:background="@null"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
